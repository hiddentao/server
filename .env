######################################################################################################
# Echo Development Configuration
######################################################################################################
#
# This file serves as both development configuration and documentation for all available
# environment variables. Copy specific values to .env.local for personal overrides.
#
# Variables marked as "client-visible" can be exposed to the frontend/client-side code
# All other variables in this file are server-side only and never exposed to clients
#
######################################################################################################

################################################################################
# Application Settings
################################################################################

# Application metadata
APP_NAME=Echo

################################################################################
# Server Configuration
################################################################################

# Web server settings
WEB_ENABLED=true
HOST=0.0.0.0
PORT=3000
API_URL=http://localhost:3000

# Worker settings
WORKER_COUNT=1

# Logging levels: trace, debug, info, warn, error
LOG_LEVEL=info
WORKER_LOG_LEVEL=info

################################################################################
# Database Configuration
################################################################################

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres@localhost:55433/echo_dev

################################################################################
# Authentication & Security
################################################################################

# Session encryption key (32 bytes, development only - generate new for production)
SESSION_ENCRYPTION_KEY=development_key_32_chars_long_replace_in_production

################################################################################
# Web3 / Blockchain Configuration
################################################################################

# Enable/disable web3 features (set to false for non-blockchain webapps)
WEB3_ENABLED=false

# Server wallet private key for blockchain operations (development wallet only)
WEB3_SERVER_WALLET_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Allowed origins for SIWE authentication (comma-separated)
WEB3_ALLOWED_SIWE_ORIGINS=http://localhost:3000,http://localhost:5173

# Supported blockchain networks (comma-separated, client-visible)
# First chain is the primary chain
WEB3_SUPPORTED_CHAINS=anvil

# WalletConnect project ID for wallet connections
WEB3_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Smart contract addresses (client-visible)
WEB3_FACTORY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Per-chain RPC endpoints (server-only)
WEB3_ANVIL_RPC=http://localhost:8545
# WEB3_MAINNET_RPC=
# WEB3_SEPOLIA_RPC=
# WEB3_BASE_RPC=

################################################################################
# External Services (Optional)
################################################################################

# Email service (Mailgun)
MAILGUN_API_KEY=
MAILGUN_API_ENDPOINT=
MAILGUN_FROM_ADDRESS=

# Error tracking and performance monitoring (Sentry)
SENTRY_DSN=
SENTRY_WORKER_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILE_SESSION_SAMPLE_RATE=1.0

################################################################################
# WebSocket Configuration (Optional)
################################################################################

# Connection limits
SOCKET_MAX_CONNECTIONS_PER_USER=5
SOCKET_MAX_TOTAL_CONNECTIONS=10000

################################################################################
# OAuth Providers (Optional)
################################################################################

# OAuth callback base URL (defaults to API_URL if not set)
# OAUTH_CALLBACK_BASE_URL=

# Google OAuth
# OAUTH_GOOGLE_CLIENT_ID=
# OAUTH_GOOGLE_CLIENT_SECRET=

# Facebook OAuth
# OAUTH_FACEBOOK_CLIENT_ID=
# OAUTH_FACEBOOK_CLIENT_SECRET=

# GitHub OAuth
# OAUTH_GITHUB_CLIENT_ID=
# OAUTH_GITHUB_CLIENT_SECRET=

# X (Twitter) OAuth
# OAUTH_X_CLIENT_ID=
# OAUTH_X_CLIENT_SECRET=

# TikTok OAuth
# OAUTH_TIKTOK_CLIENT_KEY=
# OAUTH_TIKTOK_CLIENT_SECRET=

# LinkedIn OAuth
# OAUTH_LINKEDIN_CLIENT_ID=
# OAUTH_LINKEDIN_CLIENT_SECRET=

################################################################################
# Cloud Storage - Cloudflare R2 (Optional)
################################################################################

# CLOUDFLARE_ACCOUNT_ID=
